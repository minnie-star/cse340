<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">   <!-- global styles -->
  <link rel="stylesheet" href="/css/favorites.css"> <!-- page-specific styles -->
</head>
<body class="favorites-body">
  <%- include('../partials/header') %>
  <%- include('../partials/navigation') %>

  
  <main class="favorites-page">
    <h2><%= title %></h2>

    <% if (message) { %>
      <p class="notice"><%= message %></p>
    <% } else { %>
      <% if (favorites && favorites.length > 0) { %>
        <ul class="favorites-list">
          <% favorites.forEach(fav => { %>
            <li class="favorite-item">
              <h3><%= fav.inv_year %> <%= fav.inv_make %> <%= fav.inv_model %></h3>
              <p><%= fav.inv_description %></p>
              <div class="favorite-actions">
                <a href="/inv/detail/<%= fav.inv_id %>" class="btn-link">View Details</a>
                <form action="/favorites/remove" method="POST">
                  <input type="hidden" name="inv_id" value="<%= fav.inv_id %>">
                  <button type="submit" class="btn-remove">Remove</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>You donâ€™t have any favorites yet.</p>
      <% } %>
    <% } %>
  </main>

  <%- include('../partials/footer') %>

</body>
</html>