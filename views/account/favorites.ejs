<!-- views/account/favorites.ejs -->

<%- nav %>

<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } else { %>
  <% if (favorites && favorites.length > 0) { %>
    <ul class="favorites-list">
      <% favorites.forEach(fav => { %>
        <li class="favorite-item">
          <h2><%= fav.inv_make %> <%= fav.inv_model %> (<%= fav.inv_year %>)</h2>
          <p><%= fav.inv_description %></p>
          <form action="/favorites/remove" method="POST">
            <input type="hidden" name="inv_id" value="<%= fav.inv_id %>">
            <button type="submit">❌ Remove</button>
          </form>
          <a href="/inv/detail/<%= fav.inv_id %>">View Details</a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="notice">You don’t have any favorites yet.</p>
  <% } %>
<% } %>