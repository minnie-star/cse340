<h1>Add New Vehicle</h1>

<% if (messages && messages.length > 0) { %>
  <div class="notice">
    <% messages.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<form action="/inv/add-inventory" method="post" class="form-container">
  <div class="form-field">
    <label for="inv_make" class="form-label">Make:</label>
    <input type="text" id="inv_make" name="inv_make" class="form-input" value="<%= inv_make || '' %>" required>
  </div>

  <div class="form-field">
    <label for="inv_model" class="form-label">Model:</label>
    <input type="text" id="inv_model" name="inv_model" class="form-input" value="<%= inv_model || '' %>" required>
  </div>

  <div class="form-field">
    <label for="inv_year" class="form-label">Year:</label>
    <input type="number" id="inv_year" name="inv_year" class="form-input" value="<%= inv_year || '' %>" required min="1900" max="2099">
  </div>

  <div class="form-field">
    <label for="inv_description" class="form-label">Description:</label>
    <textarea id="inv_description" name="inv_description" class="form-textarea" required><%= inv_description || '' %></textarea>
  </div>

  <div class="form-field">
    <label for="inv_image" class="form-label">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" class="form-input" value="<%= inv_image || '' %>" required>
  </div>

  <div class="form-field">
    <label for="inv_thumbnail" class="form-label">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" class="form-input" value="<%= inv_thumbnail || '' %>" required>
  </div>

  <div class="form-field">
    <label for="inv_price" class="form-label">Price:</label>
    <input type="number" id="inv_price" name="inv_price" class="form-input" value="<%= inv_price || '' %>" required step="0.01">
  </div>

  <div class="form-field">
    <label for="inv_miles" class="form-label">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" class="form-input" value="<%= inv_miles || '' %>" required>
  </div>

  <div class="form-field">
    <label for="classification_id" class="form-label">Classification:</label>
    <select id="classification_id" name="classification_id" class="form-select" required>
      <%- classificationList %>
    </select>
  </div>

  <button type="submit" class="btn-primary">Add Vehicle</button>
</form>