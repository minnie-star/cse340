<h1>Add New Classification</h1>

<!-- Flash messages -->
<% if (messages && messages.length > 0) { %>
  <div class="notice">
    <% messages.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<form action="/inv/add-classification" method="post" class="form-container">
  <div class="form-field">
  <label for="classification_name" class="form-label">Classification Name:</label>
  <input 
    type="text" 
    id="classification_name" 
    name="classification_name" 
    value="<%= classification_name ? classification_name : '' %>" 
    required 
    pattern="^[A-Za-z0-9]+$" 
    title="No spaces or special characters allowed"
  >
  </div>
  <button type="submit" class="btn-primary">Add Classification</button>
</form>

